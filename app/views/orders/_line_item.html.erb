<div class="line-item">
  <%= image_tag line_item.product.image.url, class: 'product-image' %>
  <div class="product-details">
    <h3><%= line_item.product.name %></h3>
    <p><%= line_item.product.description %></p>
    <p>Quantity: <%= line_item.quantity %></p>
    <p>Line Item Total: <%= number_to_currency(line_item.total_price) %></p>
  </div>
</div>
